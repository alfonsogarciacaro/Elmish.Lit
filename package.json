{
    "private": true,
    "scripts": {
        "install": "dotnet tool restore",
        "publish": "dotnet fsi build.fsx publish",
        "test": "dotnet fable test --run web-test-runner test/**/*Test.fs.js --node-resolve",
        "test:watch": "dotnet fable watch test --run web-test-runner test/**/*Test.fs.js --node-resolve --watch",
        "test:update-snapshots": "dotnet fable test --run web-test-runner test/**/*Test.fs.js --node-resolve --update-snapshots",
        "start": "cd sample && dotnet fable watch src -o out --run webpack serve"
    },
    "dependencies": {
        "lit": "^2.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@web/test-runner": "^0.13.16",
        "fable-publish-utils": "^2.2.0",
        "webpack": "^5.53.0",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.2.1"
    }
}
